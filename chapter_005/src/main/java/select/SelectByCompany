-- 1) Retrieve in a single query:
-- - names of all persons that are NOT in the company with id = 5
-- - company name for each person
SELECT p.name, c.name FROM Person AS p INNER JOIN Company AS c ON p.company_id = c.id group by p.name, c.name, c.id having c.id != 5;

--2) Select the name of the company with the maximum number of persons + number of persons in this company
SELECT c.name, count(*) AS CountCompany FROM Company as c INNER JOIN Person as p on c.id = p.company_id GROUP BY c.name
ORDER BY CountCompany DESC LIMIT 1;